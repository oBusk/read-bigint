{
    "name": "root",
    "private": true,
    "volta": {
        "node": "13.9.0"
    },
    "scripts": {
        "bootstrap": "lerna bootstrap",
        "prettier-write": "prettier --write",
        "build": "lerna run build",
        "format": "npm run prettier-all-files -- --write",
        "prettier-all-files": "prettier \"**/*.{js,jsx,ts,tsx,json,md,yml,yaml}\" --ignore-path .gitignore",
        "lint": "npm run prettier-all-files -- --check && lerna run lint",
        "test": "lerna run test",
        "test-coverage": "lerna run test-coverage",
        "prepare": "npm run bootstrap"
    },
    "husky": {
        "hooks": {
            "pre-commit": "lint-staged"
        }
    },
    "lint-staged": {
        "*.{js,jsx,ts,tsx,json,md,yml,yaml}": [
            "npm run prettier-write",
            "git add"
        ]
    },
    "devDependencies": {
        "@typescript-eslint/eslint-plugin": "^2.21.0",
        "@typescript-eslint/parser": "^2.21.0",
        "eslint": "^6.8.0",
        "eslint-config-prettier": "^6.10.0",
        "eslint-plugin-prettier": "^3.1.2",
        "husky": "^4.2.3",
        "lerna": "^3.20.2",
        "lint-staged": "^10.0.8",
        "prettier": "^1.19.1",
        "typescript": "^3.8.3"
    }
}

{
    "name": "root",
    "private": true,
    "volta": {
        "node": "13.9.0"
    },
    "scripts": {
        "bootstrap": "lerna bootstrap",
        "build": "lerna run build",
        "prettier-all-files": "prettier **/*.{js,jsx,ts,tsx,json,md,yml,yaml} !packages/** --ignore-path .gitignore --check",
        "lint": "npm run prettier-all-files && lerna run prettier && lerna run lint",
        "lint-fix": "npm run prettier-all-files -- --write && lerna run prettier -- -- --write && lerna run lint -- -- --fix",
        "test": "lerna run test",
        "test-coverage": "lerna run test-coverage",
        "prepare": "npm run bootstrap"
    },
    "husky": {
        "hooks": {
            "pre-commit": "lint-staged"
        }
    },
    "lint-staged": {
        "*.{js,jsx,ts,tsx,json}": [
            "eslint --fix",
            "git add"
        ],
        "*.{md,yml,yaml}": [
            "prettier --write",
            "git add"
        ]
    },
    "devDependencies": {
        "@typescript-eslint/eslint-plugin": "^2.21.0",
        "@typescript-eslint/parser": "^2.21.0",
        "eslint": "^6.8.0",
        "eslint-config-prettier": "^6.10.0",
        "eslint-plugin-prettier": "^3.1.2",
        "husky": "^4.2.3",
        "lerna": "^3.20.2",
        "lint-staged": "^10.0.8",
        "prettier": "^1.19.1",
        "typescript": "^3.8.3"
    }
}

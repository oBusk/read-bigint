{
    "name": "read-bigint",
    "version": "0.0.0",
    "description": "ðŸ‘“ðŸ’¯ Read Unsigned/Signed Big/Little-Endian BigInt from Buffer",
    "keywords": [
        "bigint",
        "buffer",
        "read",
        "readbigint",
        "signed",
        "unsigned"
    ],
    "author": "Oscar Busk <oscar.busk@gmail.com>",
    "license": "MIT",
    "homepage": "https://github.com/oBusk/read-bigint#readme",
    "repository": {
        "type": "git",
        "url": "git+https://github.com/oBusk/read-bigint.git"
    },
    "bugs": {
        "url": "https://github.com/oBusk/read-bigint/issues"
    },
    "volta": {
        "node": "13.9.0"
    },
    "files": [
        "dist/",
        "dist.module/",
        "!**/*.spec.*"
    ],
    "main": "dist/index.js",
    "typings": "dist/index.d.ts",
    "module": "dist.module/index.js",
    "sideEffects": false,
    "bundlewatch": {
        "files": [
            {
                "path": "dist?(.module)/!(*.spec).js",
                "maxSize": "1kB"
            }
        ]
    },
    "scripts": {
        "build": "rimraf dist/ dist.module/ && tsc && tsc -P tsconfig.module.json",
        "lint": "eslint **/*.{js,jsx,ts,tsx,json} --ignore-path .gitignore",
        "prettier": "prettier **/*.{md,yml,yaml} --ignore-path .gitignore --check",
        "postlint": "npm run prettier",
        "test": "jest",
        "test-coverage": "jest --coverage",
        "prepare": "npm run build",
        "bundlewatch": "bundlewatch"
    },
    "husky": {
        "hooks": {
            "pre-commit": "lint-staged"
        }
    },
    "lint-staged": {
        "*.{js,jsx,ts,tsx,json}": [
            "eslint --fix",
            "git add"
        ],
        "*.{md,yml,yaml}": [
            "prettier --write",
            "git add"
        ]
    },
    "devDependencies": {
        "@types/jest": "^25.1.3",
        "@types/node": "^10.17.17",
        "@typescript-eslint/eslint-plugin": "^2.21.0",
        "@typescript-eslint/parser": "^2.21.0",
        "bundlewatch": "^0.2.5",
        "eslint": "^6.8.0",
        "eslint-config-prettier": "^6.10.0",
        "eslint-plugin-prettier": "^3.1.2",
        "husky": "^4.2.3",
        "jest": "^25.1.0",
        "lint-staged": "^10.0.8",
        "prettier": "^1.19.1",
        "ts-jest": "^25.2.1",
        "typescript": "^3.8.3"
    }
}

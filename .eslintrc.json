{
    "env": {
        "node": true,
        "es6": true
    },
    "extends": [
        "eslint:recommended",
        "plugin:jest/style",
        "plugin:@typescript-eslint/recommended",
        "plugin:prettier/recommended"
    ],
    "overrides": [
        {
            "files": ["src/**/*.ts"],
            "parserOptions": {
                "project": "./tsconfig.json"
            },
            "extends": [
                "plugin:@typescript-eslint/recommended-requiring-type-checking"
            ]
        }
    ]
}
